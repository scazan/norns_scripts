#!/bin/bash
DATE=`date -Iminutes`

[ ! -d "/home/we/dust/data/norns_scripts" ] && mkdir /home/we/dust/data/norns_scripts

mkdir /home/we/dust/audio/tape/$DATE
mkdir /home/we/dust/data/norns_scripts/tape$DATE
mv /home/we/dust/audio/tape/*.wav /home/we/dust/data/norns_scripts/tape$DATE
#/usr/bin/rclone copy /home/we/dust/data/norns_scripts/tape$DATE drive:tape/$DATE -P --stats 2s --exclude="node_modules/**" --exclude=".git**"
